<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.HomeActivity">

        <Button
            android:id="@+id/movie_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:padding="12dp"
            android:text="Movie"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/tvshow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:padding="12dp"
            android:text="Button"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/movie_button"
            app:layout_constraintStart_toStartOf="@+id/movie_button"
            app:layout_constraintTop_toBottomOf="@+id/movie_button" />

        <Button
            android:id="@+id/people_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:padding="12dp"
            android:text="People"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvshow_button"
            app:layout_constraintStart_toStartOf="@+id/tvshow_button"
            app:layout_constraintTop_toBottomOf="@+id/tvshow_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
